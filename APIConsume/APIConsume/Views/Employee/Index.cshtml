@model List<VmEmployee>
@{
    ViewData["Title"] = "Index";
}


<div class="container">
    <div class="row">
        <div class="col-lg-12 mb-5">
            <a asp-controller="employee" asp-action="create" class="btn btn-primary">Create</a>
        </div>

        <div class="col-lg-12 mb-5">
            @if (TempData["error"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["error"]
                </div>
            }
        </div>

        <div class="col-lg-12">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Image</th>
                        <th scope="col">Name</th>
                        <th scope="col">Surname</th>
                        <th scope="col">Age</th>
                        <th scope="col">Merital status</th>
                        <th scope="col">Position</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int i = 1;
                        foreach (var item in Model)
                        {
                            <tr>
                                <th scope="row">@i</th>
                                <td>
                                    <img src="data:image/png;base64, @item.ImageBase64" width="50" alt="no image"/>
                                </td>
                                <td>@item.Name</td>
                                <td>@item.Surname</td>
                                <td>@item.Age</td>
                                <td>@item.IsMarried</td>
                                <td>@item.Position.Name</td>
                                <td>
                                    <a asp-controller="employee" asp-action="update" asp-route-id="@item.Id" class="btn btn-success">Update</a>
                                    <a asp-controller="employee" asp-action="delete" asp-route-id="@item.Id" class="btn btn-danger" onclick="return confirm('Are you sure?')">Delete</a>
                                </td>
                            </tr>

                            i++;
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>