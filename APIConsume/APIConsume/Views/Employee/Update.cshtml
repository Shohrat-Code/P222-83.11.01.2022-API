@model VmCreateEmployee
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div asp-validation-summary="All" class="text-danger"></div>
            <form asp-controller="employee" asp-action="update" method="post">
                <div class="mb-3">
                    <label asp-for="@Model.Employee.Name" class="form-label">Name</label>
                    <input asp-for="@Model.Employee.Name" class="form-control">
                    <span asp-validation-for="@Model.Employee.Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Employee.Surname" class="form-label">Surname</label>
                    <input asp-for="@Model.Employee.Surname" class="form-control">
                    <span asp-validation-for="@Model.Employee.Surname" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Employee.Age" class="form-label">Age</label>
                    <input asp-for="@Model.Employee.Age" class="form-control">
                    <span asp-validation-for="@Model.Employee.Age" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Employee.PositinId" class="form-label">Positin</label>
                    <select class="form-control" asp-for="@Model.Employee.PositinId" asp-items="@(new SelectList(Model.Positions, "Id", "Name"))">
                        <option selected disabled>Select position</option>
                    </select>
                    <span asp-validation-for="@Model.Employee.PositinId" class="text-danger"></span>
                </div>
                <div class="form-check">
                    <input asp-for="@Model.Employee.IsMarried" class="form-check-input">
                    <label asp-for="@Model.Employee.IsMarried" class="form-check-label">Merital status</label>
                    <span asp-validation-for="@Model.Employee.IsMarried" class="text-danger"></span>
                </div>
                <input asp-for="@Model.Employee.Id" hidden/>
                <br />
                <br />
                <button type="submit" class="btn btn-primary">Update</button>
            </form>

        </div>
    </div>
</div>